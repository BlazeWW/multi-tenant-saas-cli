{
	"name": "multi-tenant-saas-cli",
	"version": "0.0.1",
	"description": "",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"clean": "rm -rf dist coverage",
		"prepare": "npm run build",
		"start": "npm run build && node dist/index.js generate-config",
		"gen:api": "npm run build && node dist/index.js generate-api",
		"gen:crud": "npm run build && node dist/index.js generate-crud",
		"gen:model": "npm run build && node dist/index.js generate-model",
		"gen:entity": "npm run build && node dist/index.js generate-entity",
		"gen:migrate": "npm run build && node dist/index.js generate-migrate",
		"test": "npm run build && jest --passWithNoTests",
		"test:watch": "jest --watch",
		"lint": "eslint . --ext .ts",
		"prebuild": "npm run clean",
		"typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
	},
	"keywords": [
		"CLI",
		"SaaS",
		"TypeORM",
		"CRUD",
		"API",
		"multi-tenant"
	],
	"author": "Blaze Web Works",
	"license": "MIT",
	"dependencies": {
		"@inquirer/prompts": "^5.3.8",
		"aws-sdk": "^2.1680.0",
		"axios": "^1.7.4",
		"commander": "^12.1.0",
		"fs-extra": "^11.2.0",
		"path": "^0.12.7",
		"pg": "^8.12.0",
		"reflect-metadata": "^0.2.2",
		"typeorm": "^0.3.20"
	},
	"devDependencies": {
		"@jest/globals": "^29.7.0",
		"@types/fs-extra": "^11.0.4",
		"@types/jest": "^29.5.12",
		"@types/node": "^22.5.0",
		"i": "^0.3.7",
		"jest": "^29.7.0",
		"ts-jest": "^29.2.4",
		"typescript": "^5.5.4"
	},
	"engines": {
		"node": ">=22.6.0",
		"npm": ">=10.8.2",
		"pnpm": ">=9.8.0"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"collectCoverage": true,
		"coverageDirectory": "./coverage",
		"coverageReporters": [
			"text",
			"lcov"
		],
		"moduleFileExtensions": [
			"ts",
			"js",
			"json"
		],
		"testMatch": [
			"**/__tests__/**/*.ts",
			"**/?(*.)+(spec|test).ts"
		]
	}
}
